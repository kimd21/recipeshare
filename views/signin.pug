extends layout

block content
  div(class='signup-panel')
    div(class='signup-form-top')
      header 
        img(src="assets/chefhat.png", alt="Chef Hat", width=88, height=85)
      a(href='../signup')
        button(class='signin-button hover-darkgray hover-pointer') Sign up
    p(style='font-size:50px;font-weight:600;') Login
    p(style='font-size:35px;') Become a 5-star rated chef!
    br
    p(class='midline-text')
      span or Sign in with Username
    form(action="", method="POST")
      input(name="username", placeholder="Enter your username", type="text")
      input(name="password", placeholder="Enter your password", type="password")
      button(class='signup-button hover-darkgray hover-pointer') Login
    p(style='font-size:30px;') Not yet registered yet?
      a(href='../signup')  
        b(class='hover-underline') Create an account
    p(style='margin-top: 200px;font-size:25px;text-underline-offset:3px;')
      a(href='#')
        u(class='hover-pointer') Privacy Policy
      |  and 
      a(href='#')
        u(class='hover-pointer') Term of Service
  div(class='poster-image')
    img(src='assets/cooking2.jpg', alt='Cooking Stock Photo 2')
    div(class='poster-image-text') 
      p Create, share, and sell 
      p your favorite recipes!

