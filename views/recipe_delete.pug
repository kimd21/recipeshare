extends navbar

block content
  div(class='flex-column nav-margin')
    h2(style='margin-top:50px;color:red;') Are you sure you want to delete this recipe permanently?
    form(action='', method='POST', style='margin-top:10px;')
      button(class='delete-button hover-pointer', type='submit', name='submit', value='Yes') Yes
      button(class='delete-button hover-pointer', type='submit', name='submit', value='No', style='margin-left:100px;') No
  div(class='flex nav-margin')
    div(class='flex-column')
      h1 #{recipe.title}
  div(class='flex nav-margin', style='margin-top:20px;')
    div(class='flex-column')
      div(class='gallery-img', style='justify-content:start;')
        img(src=`${image.url}`, alt=`${image.filename}`)
      section(style='margin-top:20px;') 
        h2 Description
        p #{recipe.description}
    div(class='flex-column', style='margin-left:200px;')
      h2 Ingredients
      ul
        for i in recipe.ingredients
          li(style='margin-top:10px;') #{i}
      h2(style='margin-top:120px;') Instructions
      ol
        for i in recipe.instructions
          li(style='margin-top:10px;') #{i}
