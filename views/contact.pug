extends layout

block content
  header
      div(style='display:flex;width:2120px;justify-content:space-between;')
        div(style='display:flex;flex-direction:column;')
          div(style='display:flex;')
            img(id='hamburgermenu', src='assets/hamburgermenu.svg', alt='menu', height=105, width=99, onclick='loadNavbar();')
            h1 RecipeShare
            img(src='assets/chefhat.png', alt='Chef Hat', height=88, width=85)
          div(style='margin-left:102px;')
            p(style='opacity:0.5;font-size:40px;') A place to create, share, and sell your recipes
            section(style='margin-top:100px;')
              //- Contact form
              h1 Contact Form
              form(action='', method='POST', onsubmit='return submitContactForm(this);')
                input(type='text', name='name', placeholder='Name', required)
                input(type='email', name='email', placeholder='Email', required)
                textarea(name='message', placeholder='Type your message...', required)
                button(class='signup-button hover-darkgray hover-pointer', type='submit') Send
        div(style='display:flex;margin-top:20px;')
          img(src='assets/search.png', style='margin-right:50px;' alt='Search Icon', height=70, width=73)
          a(href='/signin', style='margin-right:50px;font-size:50px;') Login
          a(href='/signup', style='margin-right:50px;font-size:50px;') Register